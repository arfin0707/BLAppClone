<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"


    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

        tools:ignore="MissingConstraints">


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="230dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="#000">

        <ImageView
            android:id="@+id/imageView_top"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="left"
            android:clipToOutline="true"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img1" />

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/a_rounded_background_yellow"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="-10dp"
        android:backgroundTint="#000"


        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Games"
            android:textColor="#fff"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginLayer"


            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exploreâž”"
            android:textColor="#EFC02E"
            android:textAllCaps="false"
            android:textSize="13sp"
            android:backgroundTint="#000"
            app:cornerRadius="50dp"
            android:layout_marginRight="10dp"
            android:padding="0dp"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>



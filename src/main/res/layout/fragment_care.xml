<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoggedInAllPages.ui_BotttomNav_1.CareFragment"
    android:id="@+id/main"
    android:background="#F9F9F9"
    android:layout_marginBottom="50dp"


    >

    <ScrollView
        android:id="@+id/scrolllayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="@+id/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/main">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/searchfield">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Search Text Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                app:boxStrokeColor="#626262"
                app:boxStrokeWidth="1dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:boxBackgroundColor="#fff"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:textColorHint="#626262"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/search_11"
                    android:drawablePadding="10dp"
                    android:hint="Search doctor by speciality or name"
                    android:backgroundTint="#fff"
                    android:textColor="#626262"


                    />
            </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <!--            CareBanner-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"
                >



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="#000">

                    <ImageView
                        android:id="@+id/care_image"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="left"
                        android:clipToOutline="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/care_banner" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <!-- Layout2 sublayout5 Care layer Title  -->
            <LinearLayout
                android:id="@+id/care"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchfield"
                android:background="#fff"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/care"
                    android:background="#fff"
                    android:layout_marginLeft="-15dp"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Consultation"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#494949"
                    android:layout_marginLeft="-15dp"
                    />

            </LinearLayout>

            <!--            Electricity care banner-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"
                >



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="#000">

                    <ImageView
                        android:id="@+id/care_image1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="left"
                        android:clipToOutline="true"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/carre_banner1" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <!-- Layout2 sublayout5 Care layer Title  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#fff"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose a department  or symtom"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="#494949"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find your doctor from 30+ clinical areas"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#929090"
                    android:layout_marginLeft="15dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                >

                <!-- categories items -->


                <!--                categories1-->

